getByIds:
SELECT *
FROM TaskList
WHERE id = ?
AND user_id = ?
LIMIT 1;

getByUser:
SELECT *
FROM TaskList
WHERE user_id = ?
ORDER BY ordinal ASC;

getMaxOrdinal:
SELECT MAX(tl.ordinal)
FROM TaskList tl
WHERE user_id = ?;

insert:
INSERT INTO TaskList VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?);

update:
UPDATE TaskList
SET title = ?, color = ?, icon = ?, description = ?, sort_type = ?, sort_direction = ?, show_index_numbers = ?, last_modified = ?, classifier_type = ?
WHERE id = ?
AND user_id = ?;

reorder {
   UPDATE TaskList
   SET ordinal = ordinal + :difference_sign, last_modified = :last_modified
   WHERE user_id = :user_id
   AND ordinal BETWEEN :lower_bound AND :upper_bound;

   UPDATE TaskList
   SET ordinal = :ordinal + 0, last_modified = :last_modified
   WHERE user_id = :user_id
   AND id = :list_id;
}

delete:
DELETE FROM TaskList
WHERE id = ?
AND user_id = ?;